<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dark_blue">

    <!-- Top Toolbar -->

    <!-- Bike Image -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Home"
        android:textAlignment="viewStart"
        android:textColor="@color/orange"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bikeImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/motorcycle"
        android:layout_gravity="center"
        android:contentDescription="Bike Image" />

    <!-- Bike Information Card -->
    <LinearLayout
        android:id="@+id/bikeInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bike Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model: Your Bike Model"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: Your Bike Year"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

        <!-- Additional Bike Details Here -->

    </LinearLayout>

    <!-- Reminders Card -->
    <LinearLayout
        android:id="@+id/remindersCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminders"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Driving License Renewal Reminder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driving License Renewal:"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2024"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Insurance Renewal Reminder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance Renewal:"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/02/2024"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Revenue License Renewal Reminder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revenue License Renewal:"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/03/2024"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/maintenance_Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/maintenance_log_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintenance Log"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="8dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/last_oil_change_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Oil Change:"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/last_oil_change_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Not Set"
        android:textColor="@color/black" />

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:id="@+id/last_bike_wash_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Bike Wash:"
        android:textColor="@color/black"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/last_bike_wash_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Set"
        android:layout_marginStart="8dp"
        android:textColor="@color/black" />

        </LinearLayout>
</LinearLayout>



    <!-- Bottom Navigation Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
       android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        app:itemPaddingBottom="10dp"
        android:layout_height="60dp"
        app:menu="@menu/bottom_nav_view"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        />


</LinearLayout>
