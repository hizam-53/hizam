<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6FC5C5C5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Page Title -->

        <!-- Last Maintenance Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Maintenance Log"

            android:textColor="@color/orange"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Maintenance"
            android:textSize="18sp"
            android:textColor="#1e3b5d"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Bike Wash Entry -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bike Wash"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/bike_wash_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: [Last Wash Date]"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/bike_wash_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes: [Any additional notes]"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="2dp" />

        <!-- Oil Change Entry -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oil Change"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/oil_change_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: [Last Oil Change Date]"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/oil_change_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes: [Any additional notes]"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="2dp" />

        <!-- Next Maintenance Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Maintenance"
            android:textSize="18sp"
            android:textColor="#1e3b5d"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Bike Wash Next Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Bike Wash Date: [Date]"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <!-- Oil Change Next Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Oil Change Date: [Date]"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <!-- Calendar View for Upcoming Tasks -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Maintenance Calendar"
            android:textSize="18sp"
            android:textColor="@color/orange"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium" />


<CalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/maintenance_calendar"
            android:layout_width="match_parent"
            android:layout_height="289dp"
            android:visibility="visible"
            android:dateTextAppearance="@style/CalendarDateTextStyle" />



    </LinearLayout>
</ScrollView>
